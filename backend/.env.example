DATABASE_URL=sqlite:///./study_abroad.db
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Provider: "gemini" or "ollama"
AI_PROVIDER=ollama

# Gemini API (only needed if AI_PROVIDER=gemini)
GEMINI_API_KEY=your-gemini-api-key-here

# Ollama settings (only needed if AI_PROVIDER=ollama)
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=llama2

ENVIRONMENT=development

# PRODUCTION NOTES:
# 1. Generate new SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 2. Choose AI Provider:
#    - "ollama" = Free, local, no API key needed (install from ollama.ai)
#    - "gemini" = Cloud-based, needs API key from https://makersuite.google.com/app/apikey
# 3. Set ENVIRONMENT=production
# 4. Consider using PostgreSQL instead of SQLite for production
